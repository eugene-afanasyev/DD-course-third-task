<VBox fx:controller="main.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" minWidth="1024" minHeight="960" fx:id="layout">
    <BorderPane fx:id="header" maxHeight="100" prefWidth="Infinity" minHeight="100">
        <left>
            <ImageView>
                <BorderPane.margin>
                    <Insets bottom="2" top="2" left="20" right="5"/>
                </BorderPane.margin>
                <Image url="@/Images/orig.png"/>
            </ImageView>
        </left>
        <right>
            <BorderPane>
                <center>
                    <TextField fx:id="searchField" prefWidth="500" promptText="Фильмы, сериалы, персоны" prefHeight="65"
                    styleClass="searchField">
                        <BorderPane.margin>
                            <Insets right="40"/>
                        </BorderPane.margin>
                    </TextField>
                </center>
            </BorderPane>
        </right>
    </BorderPane>
    <VBox VBox.vgrow="ALWAYS" fx:id="contentVBox" styleClass="content" prefWidth="Infinity" minWidth="Infinity">
        <ImageView>
            <Image url="https://avatars.mds.yandex.net/get-kinopoisk-image/1704946/eed1de3a-5400-43b3-839e-22490389bf54/360">
            </Image>
        </ImageView>
    </VBox>
</VBox>